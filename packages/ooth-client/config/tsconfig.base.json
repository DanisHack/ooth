{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "outDir": "../build",
        "rootDir": "../src",
        "declaration": true,
        "sourceMap": false,
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2015"
        ]
    },
    "include": [
        "../src/**/*"
    ],
    "exclude": []
}
